<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.DayNight">

        <!-- Customize your theme here. -->
        <item name="colorPrimaryBlackText">#000000</item>
        <item name="colorPrimaryWhite">#ffffff</item>
        <item name="colorPrimaryDark">#FFDD2C00</item>
        <item name="colorPrimary">#FFFF6D00</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

    </style>


    <style name="DetailsActivityTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/detailsToolbar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

    </style>

    <!-- Dark theme. -->

    <style name="AppThemeDark" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryBlackText">#ffffff</item>
        <item name="colorPrimaryWhite">#000000</item>
        <item name="colorPrimaryDark">#100E0D</item>
        <item name="colorPrimary">#FF020202</item>
        <item name="colorAccent">@color/colorAccentNight</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

    </style>


    <style name="DetailsActivityThemeDark" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/detailsToolbar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

    </style>







    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">#6E797C</item>
        <item name="android:textColorSecondary">#6E797C</item>
        <item name="actionMenuTextColor">#6E797C</item>
    </style>


    <!--Difference 21-->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <!--Difference-->

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
